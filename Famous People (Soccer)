/* LIST OF SOME FAMOUS SOCCER PLAYERS */
SELECT * FROM PLAYERS;


/* PREVIOUS SOCCER PLAYER LEAGUE IN WHICH TEAM IS LOCATED*/
SELECT P.NAME, L.CURRENT_LEAGUE,L.PREVIOUS_LEAGUE
FROM PLAYERS P
JOIN LEAGUE L
ON P.ID = L.PERSON_NUMBER; 

SELECT P.NAME, D.DEBUT_YEAR,L.CURRENT_LEAGUE
FROM PLAYERS P
JOIN DEBUT D
ON P.ID = D.ID
JOIN LEAGUE L
ON P.ID = L.PERSON_NUMBER; 
