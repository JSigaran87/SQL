/* Create table about the people and what they do here - LIST OF SOCCER PLAYERS*/

CREATE TABLE PLAYERS(
ID INTEGER PRIMARY KEY AUTOINCREMENT,
NAME TEXT,
NATIONALITY TEXT,
SPOUSE TEXT,
TEAM TEXT,
PREVIOUS_TEAM TEXT,
CURRENT_GOALS INTEGER,
TOTAL_GOALS INTEGER
);

